@inject PeriodService PeriodService

<CascadingValue Value="this">
    @ChildContent
</CascadingValue>

@code {
    
    [CascadingParameter]
    public TimetableWeekComponent WeekContainer { get; set; }
    [Parameter]
    public RenderFragment ChildContent { get; set; }
    [Parameter]
    public long Day { get; set; }
    public List<SavedLessonIdperiodId> SavedLessonIdperiodIds = new List<SavedLessonIdperiodId>();
    
    protected override void OnParametersSet() {
        SavedLessonIdperiodIds.Clear();
        SavedLessonIdperiodIds.AddRange(WeekContainer.SavedLessonIdperiodIds.Where(
            x=>PeriodService.GetPeriodByIdAsync(x.PeriodId).Result.Day == Day));
    }
}